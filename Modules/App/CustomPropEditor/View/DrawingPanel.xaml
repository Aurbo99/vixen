    <ItemsControl ItemsSource="{Binding LightNodes}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas IsItemsHost="True" Name="PropCanvas" Height="{Binding Prop.Height}" Width="{Binding Prop.Width}" Background="Black" Margin="0"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
            <Style TargetType="ContentPresenter">
                <Setter Property="Canvas.Left" Value="{Binding Left}"/>
                <Setter Property="Canvas.Top" Value="{Binding Top}"/>
            </Style>
        </ItemsControl.ItemContainerStyle>
        <ItemsControl.ItemTemplate>
            <ItemContainerTemplate>
                <Thumb DragDelta="Thumb_OnDragDelta" Margin="0">
                    <Thumb.Template>
                        <ControlTemplate>
                            <Ellipse Fill="White" Width="{Binding Size}" Height="{Binding Size}"/>
                        </ControlTemplate>
                    </Thumb.Template>
                    <Thumb.RenderTransform>
                        <TranslateTransform X="{Binding Left}" Y="{Binding Top}"></TranslateTransform>
                    </Thumb.RenderTransform>
                </Thumb>
            </ItemContainerTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>


</UserControl>
